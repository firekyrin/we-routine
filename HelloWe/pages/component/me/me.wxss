.head {
    padding: 80rpx;
    line-height: 1;
}

.title {
    font-size: 52rpx;
}

.desc {
    margin-top: 10rpx;
    color: #888888;
    font-size: 28rpx;
}

.menu-list {
    display: flex;
    flex-direction: column;
    background-color: #fbf9fe;
    margin-top: 10rpx;
    width: 100%;
}

.menu-item {
    display: flex;
    flex-direction: column;
    background-color: #fff;
    color: #000000;
    margin: 10rpx 30rpx;
}

.menu-item-main {
    display: flex;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    border-radius: 10rpx;
    align-items: center;
    /*font-size: 32rpx;*/
    justify-content: space-between;
}

.menu-item-arrow {
    width: 32rpx;
    height: 32rpx;
    transition: 400ms;
}

.menu-item-avatar {
    width: 64rpx;
    height: 64rpx;
    border-radius: 32rpx;
    margin-left: 20rpx;
}

.menu-item-name {
    color: #333333;
    font-size: 36rpx;
}

.menu-item-identity {
    color: #666666;
    font-size: 28rpx;
}

.menu-item-left {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    /*margin-left: 20rpx;*/
    background-color: lightgray;
}

.menu-item-head {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    margin-left: 20rpx;
    background-color: gray;
}

.menu-item-title {
    /*display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: center;
    margin-left: 20rpx;
    background-color: lightgray;*/
    color: #333333;
    font-size: 36rpx;
}